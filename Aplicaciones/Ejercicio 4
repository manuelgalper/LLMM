<body>

    <h1>Generador de Tabla de Multiplicación</h1>
    <label for="numero">Introduce un número: </label>
    <input type="number" id="numero" placeholder="Número" required>
    <button onclick="generarTabla()">Generar Tabla</button>

    <div id="tabla-container"></div>

    <script>
        function generarTabla() {
            const numero = document.getElementById('numero').value;
            const tablaContainer = document.getElementById('tabla-container');

            // Verificamos que el número no esté vacío
            if (!numero) {
                alert('Por favor, introduce un número');
                return;
            }

            let tablaHTML = '<table>';
            tablaHTML += '<tr><th>Multiplicación</th><th>Resultado</th></tr>';

            // Generar las filas de la tabla
            for (let i = 1; i <= 10; i++) {
                tablaHTML += `<tr><td>${numero} x ${i}</td><td>${numero * i}</td></tr>`;
            }

            tablaHTML += '</table>';

            // Insertamos la tabla generada en el contenedor
            tablaContainer.innerHTML = tablaHTML;
        }
    </script>

</body>
